# Map Source URL
# The URL template for fetching map tiles
MAP_SOURCE=https://api.maptiler.com/maps/satellite/{z}/{x}/{y}.jpg?key=***

# Cache Configuration
# Maximum number of tiles to cache
CACHE_MAX_SIZE=200
# Interval (in milliseconds) to reset the cache
CACHE_RESET_INTERVAL=60000

# Tile Loading Configuration
# Timeout (in milliseconds) for loading a tile
TILE_LOAD_TIMEOUT=30000

# Server Configuration
# Port for the server to listen on
PORT=5000

# AWS Configuration (for S3 storage)
# AWS region for S3 bucket
AWS_REGION=us-east-1
# AWS access key ID (optional if using IAM roles)
AWS_ACCESS_KEY_ID=***
# AWS secret access key (optional if using IAM roles)
AWS_SECRET_ACCESS_KEY=***

# S3 Storage Configuration
# S3 bucket name for tile storage
S3_BUCKET=maptile
# S3 endpoint URL (for MinIO or other S3-compatible services)
S3_ENDPOINT=http://10.0.84.219:29000/
# S3 prefix/path for tile storage (default: tiles)
S3_PREFIX=tiles